name: |
  <%= name %>

description: |
  <%= description %>

artist: <%= artist %>
genre: <%= genre %>
artwork: <%= artwork %>
media_uri: <%= media_uri %>  # Include protocol. Omit trailing slash.

uploads:
<% uploads.each do |upload| %>
- name: <%= upload.name %>
  host: <%= upload.host %>
  path: <%= upload.path %>
  user: <%= upload.user %>
  pass: <%= upload.pass %>

<% end %>
views:
<% views.each do |view| %>
- name: <%= view.name %>
  template: <%= view.template %>

<% end %>
email:
<% email.each do |email| %>
- subject: |
    <%= email.subject %>

  recipients:
<% email.recipients.each do |recipient| %>
  - <%= recipient %>
<% end %>

  recipient_salutation: <%= email.recipient_salutation %>
  from: <%= email.from %>
  from_salutation: <%= email.from_salutation %>
  template: <%= email.template %>

<% end %>

slack:
<% slack.each do |slack| %>
- url: <%= slack_url %>
  username: <%= slack.username %>
  channel: "<%= slack.channel %>"
  template: <%= slack.template %>

<% end %>
