name: |
  <%= name %>

description: |
  <%= description %>

artist: <%= artist %>
genre: <%= genre %>
artwork: <%= artwork %>
media_uri: <%= media_uri %>  # Include protocol. Omit trailing slash.

uploads:
<% uploads.each do |upload| %>
- name: <%= upload.name %>
  host: <%= upload.host %>
  path: <%= upload.path %>
  user: <%= upload.user %>
  pass: <%= upload.pass %>

<% end %>
views:
<% views.each do |view| %>
- name: <%= view.name %>
  template: <%= view.template %>

<% end %>
informs:
<% informs.each do |inform| %>
- subject: |
    <%= inform.subject %>

  recipients:
<% inform.recipients.each do |recipient| %>
  - <%= recipient %>
<% end %>

  recipient_salutation: <%= inform.recipient_salutation %>
  from: <%= inform.from %>
  from_salutation: <%= inform.from_salutation %>
  template: <%= inform.template %>

<% end %>
